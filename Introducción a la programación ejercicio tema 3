public class Main {
    public static void main(String[] args) {

        // Primera Parte
        int a=1,b=2,c=3;
        var z=suma(a,b,c);
        System.out.println("El resultado de la suma es: "+ z);

        //Segunda Parte
        coche carro= new coche();
        carro.addd();
        System.out.println("Las puertas del carro son: "+carro.puertas);

    }
    // Primera Parte
    public static int suma(int a,int b,int c){

        return a+b+c;

    }
}
//Segunda Parte
class coche{
    public int puertas =4;

    public void addd(){
        this.puertas++;
    }
}
